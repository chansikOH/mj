<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
.header-logo {
	width: 100px;
	display: block;
	margin: 0 auto;
} 
.header-menu, .header-menu:hover {
	color: black;
	text-align: center;
	width: 190px;
	font-size: 16px;
	margin-right: 35px;
}
.submenu {
	color: black;
	text-align: center;
	width: 100px;
	font-size: 14px;
}
.nav-top {
	height: 40px;
	font-size: 11px;
	color: black;
	padding-top: 10px !important;
	
}
.navbar-fixed-top {
	background-color: white;
}
.nav-top-center{font-size: 11px;}
.search-btn{border: 0; background-color: #fff;}
.glyphicon-search{color: purple; margin-right: -30px}
.cart-icon{width: 30px;}
.affix {
    top: 0;
    width: 100%;
    z-index: 9999 !important;
  }

.badge{
	background-color: purple;
	display: inline-block;
	margin-right: 5px;
	margin-bottom:3px;
}

.footer-btn{
	width: 100%;
	margin-top: 10px;
	margin-bottom: 10px;
}
.footer-text{color: #aaa; margin-top: -5px; margin-bottom: 20px;}
.footer-info{color: #aaa; font-size: 12px; margin: 3px;}
.purple{color: purple;}
.footer-line{margin-top: -10px; margin-bottom: -10px}
.footer-bottom{border: 0; color: black; padding: 0px; font-size: 12px}
.footer-img{width: 30px; margin-left: 5px;}
.footer-bottom-text{
	color: #aaa; 
	font-size: 11px; 
	margin-left: -40px;
	margin-bottom: 2px;
}

.dropdown-submenu {
	position: relative;
}

.dropdown-submenu>.dropdown-menu {
	top: 0;
	left: 100%;
	margin-top: -6px;
	margin-left: -1px;
}

.dropdown-submenu:hover>.dropdown-menu {
	display: block;
}

.dropdown-submenu>a:after {
	display: block;
	content: " ";
	float: right;
	width: 0;
	height: 0;
	border-color: transparent;
	border-style: solid;
	border-width: 5px 0 5px 5px;
	border-left-color: #ccc;
	margin-top: 5px;
	margin-right: -10px;
}

.dropdown-submenu:hover>a:after {
	border-left-color: #fff;
}

.line-through {
	text-decoration: line-through;
	color: #aaa;
	margin-top: -10px;
}
.header-img{
	padding-bottom:4px;
}
        
